<?xml version="1.0" encoding="UTF-8"?>
<Button xmlns="http://xamarin.com/schemas/2014/forms" 
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        x:Class="Mobile.Views.Templates.FloatingButton"
        WidthRequest="60"
        HeightRequest="60"
        BorderRadius="30"
        AbsoluteLayout.LayoutFlags="PositionProportional"
        AbsoluteLayout.LayoutBounds=".95, .95, AutoSize, AutoSize"
        BackgroundColor="{StaticResource GreenColor}"
        IsEnabled="{Binding IsEnableFloatingButton}"
        Image="{Binding FloatingButtonIcon}"
        Command="{Binding FloatingButtonCommand}"
        BorderColor="{StaticResource AccentButtonBorderColor}"
        BorderWidth="1"/>